<center><h1>Your random image</h1></center>
<h3>Name: <%= @user.name%></h3>
<h3>Lastname: <%= @user.lastname%></h3>
<h3>Email: <%= @user.email%></h3>

<center><img src=<%= @url%> alt="random_image"></center>

<center><h1>All your images</h1></center>

<center>
  <table border="1">
    <thead>
      <tr>
        <th>Image id</th>
        <th>Image</th>
        <th>Add to favourites</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
        <% @all_urls.each do |x| %>
          <tr>
            <td><%= x.id %></td>
            <td><%= image_tag(x.image_url, class: 'image', width: "300", height: "300") %></td>
            <td><%= link_to 'Add to favourites', user_image_path(user_id: x.user_id, id: x.id), method: :put %></td>
            <td><%= link_to 'Destroy',  user_image_path(user_id: x.user_id, id: x.id), method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
        <% end %>
    </tbody>
  </table>
</center>

