<table class="table table-striped table-dark">
  <% if current_user != nil && current_user.is_admin?%>
    <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Age</th>
      <th>Sex</th>
      <th>City</th>
      <th>Functionality</th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.age %></td>
        <td><%= user.sex %></td>
        <td><%= user.address.city %></td>
        <td>
          <%= link_to 'Show images', user_images_path(user.id), class: "btn btn-outline-primary"%>
          <%= link_to 'Show favourites', user_favs_path(user.id), class: "btn btn-outline-primary"%>
        </td>
      </tr>
    <% end %>
    </tbody>
  <% elsif current_user != nil && !current_user.is_admin? %>
    <%= redirect_to user_images_path(current_user.id) %>
  <% else %>
    <div class="row">
      <% @all_urls.each do |x| %>
        <div class="col-sm-3">
          <div class="card" style="width: 18rem;">
            <img class="card-img-top" src=<%= x %> alt="Card-image-cap">
            <div class="card-body">
              <h5 class="card-title">Another good picture for you :)</h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</table>

