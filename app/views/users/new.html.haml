%h1 Creation of new user
= form_with scope: :user, url: users_path, local: true do |form|
  %p
    = form.label :name
    %br/
    = form.text_field :name
  %p
    = form.label :lastname
    %br/
    = form.text_area :lastname
  %p
    = form.label :email
    %br/
    = form.text_area :email
  %p
    = form.submit
